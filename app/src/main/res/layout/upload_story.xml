<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Story Image Background -->
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/jonsnow"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Dark Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#20000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Top Control Icons -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Close X -->
        <ImageView
            android:id="@+id/closebtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/cross"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- other top icons omitted for brevity; keep existing -->

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Your Stories Button (now clickable and has id) -->
        <LinearLayout
            android:id="@+id/btnYourStories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/story_button_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivYourStoryAvatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_pic"
                android:background="@drawable/circle_mask"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvYourStories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your stories"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- Close Friends Button (clickable, id added) -->
        <LinearLayout
            android:id="@+id/btnCloseFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/story_button_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/ivCloseFriendsMark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/star"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvCloseFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Friends"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- Spacer -->
        <ImageView
            android:id="@+id/sendbtn"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:padding="12dp"
            android:src="@drawable/sendbutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- Upload Progress (overlay) -->
    <ProgressBar
        android:id="@+id/uploadProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
