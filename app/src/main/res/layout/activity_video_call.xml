<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/gradient_bottom"
    tools:context=".VideoCallActivity">

    <!-- Remote/Main Video Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Gradient Overlay for Status/Info -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@layout/gradient_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Call Duration/Status -->
    <TextView
        android:id="@+id/callStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Self Preview (Picture-in-Picture) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/selfPreviewCard"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/topGradient"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/selfPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- Bottom Gradient Overlay -->
    <View
        android:id="@+id/bottomGradient"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@layout/gradient_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control Buttons Container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mute/Unmute Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#40FFFFFF"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/muteButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/microphone"
                android:tint="#FFFFFF"
                android:contentDescription="Mute/Unmute" />
        </androidx.cardview.widget.CardView>

        <!-- End Call Button (Prominent) -->
        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="#FF3B30"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/endVideoCall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/telephone"
                android:rotation="135"
                android:tint="#FFFFFF"
                android:contentDescription="End Call" />
        </androidx.cardview.widget.CardView>

        <!-- Camera Toggle Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#40FFFFFF"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/cameraToggle"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:tint="#FFFFFF"
                android:contentDescription="Toggle Camera" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Switch Camera Button (Top Right, Optional) -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/topGradient"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/switchCamera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/flip"
            android:tint="#FFFFFF"
            android:contentDescription="Switch Camera" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>