<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Scrollable Profile Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/left_arrow"
                        android:tint="#8B5A5A"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/toolbarUsername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#8B5A5A"
                        android:gravity="center"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/menuDots"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more"
                    android:tint="#000000"
                    android:contentDescription="More options"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Header: avatar + counters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- In profile_layout.xml, update the profile image section: -->

                <FrameLayout
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="12dp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bilal"/>

                    <View
                        android:id="@+id/profileOnlineIndicator"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:background="@drawable/online_dot"/>
                </FrameLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/postsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textColor="#8E8E8E"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/followersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="#8E8E8E"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/followingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="#8E8E8E"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Profile Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <!-- XML -->
                <!-- update: threadsUsername text cleared and background points to drawable -->
                <LinearLayout
                    android:id="@+id/threadsLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@layout/gray_capsule"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/threads_logo"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/threadsUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#000000"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/displayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:weightSum="3.5">

                    <Button
                        android:id="@+id/followButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Follow"
                        android:layout_marginEnd="6dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:textSize="13sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:backgroundTint="#8B5A5A"
                        style="?attr/materialButtonStyle"/>

                    <Button
                        android:id="@+id/messageButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Message"
                        android:layout_marginEnd="6dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        style="?attr/materialButtonOutlinedStyle"/>

                    <Button
                        android:id="@+id/emailButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Email"
                        android:layout_marginEnd="6dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        style="?attr/materialButtonOutlinedStyle"/>

                    <ImageView
                        android:id="@+id/addContactImage"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:src="@drawable/addcontact"
                        android:background="#E0E0E0"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Add Contact"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Highlights Section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/highlightsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/profile_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:weightSum="4"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/highlightsRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:src="@drawable/grid2"
                    android:scaleType="centerInside"
                    android:tint="#8B5A5A"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:src="@drawable/user"
                    android:scaleType="centerInside"
                    android:tint="#8B5A5A"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Posts Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tabs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress overlay (hidden by default) -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home2"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/explorepg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/shape"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/plusbox"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/notificationsfollowing"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/like"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/bottomProfileThumb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile_pic"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
