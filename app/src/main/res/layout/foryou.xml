<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/addstory"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_camera"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="22sp"
            android:textColor="#8B5A5A"
            android:gravity="center"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/tv"
            android:tint="#8B5A5A"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/chats"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/send"
            android:tint="#8B5A5A"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/topHeader"/>

    <!-- Stories ScrollView -->
    <HorizontalScrollView
        android:id="@+id/storiesScrollView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/storiesRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="#FFFFFF"/>
    </HorizontalScrollView>

    <!-- SwipeRefreshLayout with RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/storiesScrollView"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home2"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/explorepg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/shape"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/plusbox"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/notificationsfollowing"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/like"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile_pic"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
