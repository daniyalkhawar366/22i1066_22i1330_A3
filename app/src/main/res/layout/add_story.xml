<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AddStoryActivity">


    <!-- Top Controls (back/settings) -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/settingsinsta"
            android:tint="#FFFFFF"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/chevron"
            android:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Story Preview (appears after user selects image) -->
    <ImageView
        android:id="@+id/storyPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Progress Bar -->
    <ProgressBar
        android:id="@+id/uploadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:progressTint="#FFCC00"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/storyPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"/>

    <!-- Bottom Controls (gallery, capture, switch, smile) -->
    <LinearLayout
        android:id="@+id/cameraControls"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="32dp">

            <!-- Gallery Button -->
            <ImageView
                android:id="@+id/btnPickImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mountains"
                android:background="@drawable/gallery_button_background"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:contentDescription="Pick from gallery"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5" />

            <ImageView
                android:id="@+id/btnUploadStory"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/circle"
                android:contentDescription="Upload story"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:importantForAccessibility="yes"
                android:padding="6dp"/>



            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5" />

            <!-- Upload Button -->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/lightningcircle"
                android:tint="#FFFFFF"
                android:padding="6dp"
                android:contentDescription="Upload story"/>
        </LinearLayout>

        <!-- Camera Mode Selector (for look only) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="24dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="24dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOMERANG"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="24dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPER"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
